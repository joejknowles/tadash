<% if flash[:notice] %>
    <p>
        <%= flash[:notice] %>
    </p>
<% end %>

<a
    href="<%= @verification_url %>"
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-primary"
    onClick="setTimeout(() => window.location.href='<%= login_token_path(device_code: @device_code) %>', 2000)"
>
    Log in
</a>
